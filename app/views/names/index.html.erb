<h1>Listing names</h1>

<table>
  <thead>
    <tr>
      <th>Calc name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <h1>All Calcs</h1>
    <% @names.each do |name| %>
      <tr>
        <td><%= name.calc_name %></td>
        <td><%= name.calc_num %></td>
        <td><%= link_to 'Show', name %></td>
        <td><%= link_to 'Edit', edit_name_path(name) %></td>
        <td><%= link_to 'Destroy', name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% name.states.each do |state| %>
            <td><%= state.orbital_subset %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Name', new_name_path %>

